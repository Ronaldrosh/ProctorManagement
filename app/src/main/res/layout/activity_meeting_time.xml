<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_meeting_time"
    android:layout_width="match_parent"
    android:background="@drawable/leave"
    android:layout_height="match_parent"
    tools:context="com.example.ronaldfernandes.proctormanagement.MeetingTime">
    <include
        layout="@layout/appbar"
        />

    <TimePicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timeMeeting"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:clickable="true" />

    <Button
        android:text="Confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="14dp"
        android:id="@+id/button6"
        android:onClick="SelectDate"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Schedule Time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView9"
        android:textSize="16sp"

        android:layout_marginBottom="13dp"
        android:layout_above="@+id/timeMeeting"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
