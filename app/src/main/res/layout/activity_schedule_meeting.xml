<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_schedule_meeting"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/leave"
    tools:context="com.example.ronaldfernandes.proctormanagement.ScheduleMeeting">
    <include
        layout="@layout/appbar"
        />

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:paddingLeft="10dp"
            android:ems="25"
            android:id="@+id/editText2"
            android:textSize="14sp"
            android:singleLine="false"
        android:layout_below="@+id/textView7"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="11dp" />


    <TextView
        android:text="Not Set"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewTime"
        android:textAllCaps="false"
        android:textSize="14sp"
        android:textStyle="normal|bold"
        android:layout_marginBottom="48dp"
        android:layout_above="@+id/textView7"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="120dp" />

    <TextView
        android:paddingTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:text="Details "
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Time:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:layout_alignBaseline="@+id/textViewTime"
        android:layout_alignBottom="@+id/textViewTime"
        android:layout_toStartOf="@+id/textView7"
        android:layout_alignEnd="@+id/textView10" />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:text="Meeting Scheduled On"
        android:layout_marginBottom="37dp"
        android:layout_above="@+id/textViewDate"
        android:layout_centerHorizontal="true" />

    <TextView
            android:text="Not Set"
            android:onClick="updateTextLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewDate"
            android:textAllCaps="false"
            android:textSize="14sp"
            android:textStyle="normal|bold"
        android:layout_marginBottom="18dp"
        android:layout_above="@+id/textViewTime"
        android:layout_toEndOf="@+id/textView7" />

    <TextView
        android:text="Date:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView10"
        android:layout_alignBaseline="@+id/textViewDate"
        android:layout_alignBottom="@+id/textViewDate"
        android:layout_toStartOf="@+id/textView7" />

    <TextView
        android:paddingTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView11"
        android:text="Comment"
        android:layout_marginTop="19dp"
        android:layout_below="@+id/editText2"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="26dp"
        android:id="@+id/button"
        style="@style/Widget.AppCompat.Button"
        android:elevation="5dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:paddingLeft="10dp"
        android:ems="25"
        android:id="@+id/editText4"
        android:textSize="14sp"
        android:singleLine="false"
        android:layout_below="@+id/textView11"
        android:layout_alignParentStart="true"
        android:layout_marginTop="17dp" />


</RelativeLayout>
