<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/leave"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.ronaldfernandes.proctormanagement.proctorHome"
    tools:showIn="@layout/activity_proctor_home">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp">

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingEnd="20dp"/>

        <Button
            android:text="Search Student"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/button1"
            android:paddingBottom="10dp"
            android:onClick="onClick1"/>
        <Button
            android:text="Call For A Meeting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:id="@+id/button2"
            android:onClick="onClick2" />
        <Button
            android:text="Make an Announcement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:id="@+id/button3"
            android:onClick="onClick3"/>
    </LinearLayout>



</android.support.v4.widget.NestedScrollView>
